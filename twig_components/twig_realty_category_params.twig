<div id="categoryParams">
{% set categoryParams = categoryParams|filter(categoryParamItem => categoryParamItem.CategoryParamType.alias != 'lot_type') %}
{% set categoryParams = categoryParams|filter(categoryParamItem => categoryParamItem.CategoryParamType.alias != 'commercial_type') %}
{% set categoryParams = categoryParams|filter(categoryParamItem => categoryParamItem.CategoryParamType.alias != 'cadastral_number') %}
{% set categoryParams = categoryParams|filter(categoryParamItem => categoryParamItem.CategoryParamType.alias != 'lot_cadastral_number') %}

{% for categoryParamItem in categoryParams %}
    {% if categoryParamItem.CategoryParamType.type == 0 %}
        <div class="group">
            <p>{{ complexCategory.getLabel(categoryParamItem) }}</p>
            <label>
                {{ form.input('CategoryParamValue.'~ categoryParamItem.CategoryParamType.alias, {
                    'type': 'text',
                    'class': 'w1-4',
                    'placeholder': '-',
                    'div': false,
                    'label': false,
                    'required': complexCategory.hasRequiredField(categoryParamItem),
                }) }}
            </label>
        </div>
    {% endif %}
    {% if categoryParamItem.CategoryParamType.type == 1 %}
        <div class="group">
            <p>{{ complexCategory.getLabel(categoryParamItem) }}</p>
            <label>
                {{ form.input('CategoryParamValue.'~ categoryParamItem.CategoryParamType.alias, {
                    'type': 'text',
                    'class': 'w1-4',
                    'placeholder': '-',
                    'div': false,
                    'label': false,
                    'required': complexCategory.hasRequiredField(categoryParamItem),
                }) }}
            </label>
        </div>
    {% endif %}
    {% if categoryParamItem.CategoryParamType.type == 2 %}
        <div class="group">
            <p>{{ complexCategory.getLabel(categoryParamItem) }}</p>
                {{ form.input('CategoryParamValue.'~ categoryParamItem.CategoryParamType.alias, {
                    'type': 'select',
                    'class': 'w3-4',
                    'div': false,
                    'label': false,
                    'options': complexCategory.getOptions(categoryParamItem),
                    'empty': true,
                    'required': complexCategory.hasRequiredField(categoryParamItem),
                }) }}
        </div>
    {% endif %}
{% endfor %}
</div>
