{% set flash = _view.loadHelper('Flash') %}
<div class="login wrap">
    {{ form.create('User', {'url': {'plugin' : 'users','controller' : 'users', 'action' : 'add'}, 'class': 'wide'}) }}
        <h1>Зарегистрироваться</h1>
        {{ flash.render() }}
        {{ form.input('last_name', {
            'div': false,
            'type': 'text',
            'required': true,
            'label': false,
            'placeholder': 'Фамилия',
        }) }}
        {{ form.input('name', {
            'div': false,
            'type': 'text',
            'required': true,
            'label': false,
            'placeholder': 'Имя',
        }) }}
        {{ form.input('description', {
            'div': false,
            'type': 'text',
            'required': true,
            'label': false,
            'placeholder': 'Название агентства',
        }) }}
        {{ form.input('username', {
            'div': false,
            'type': 'tel',
            'required': true,
            'label': false,
            'placeholder': 'Номер телефона',
        }) }}
        {{ form.input('email', {
            'div': false,
            'type': 'email',
            'required': true,
            'label': false,
            'placeholder': 'E-mail',
        }) }}
        {{ form.input('password', {
            'div': false,
            'type': 'password',
            'required': true,
            'label': false,
            'placeholder': 'Придумайте пароль',
        }) }}
        {% if recaptcha.hasKey() %}
            {{ recaptcha.display_form({'id': 'register_form', 'div': 'recaptcha-block'}) }}
        {% endif %}
        <button type="submit" class="btn">Зарегистрироваться</button>
    {{ form.end() }}
</div>
